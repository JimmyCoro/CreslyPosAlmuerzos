{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && cd poscresly && python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "cd poscresly && daphne -b 0.0.0.0 -p $PORT poscresly.asgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

